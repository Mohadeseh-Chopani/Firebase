<!--        android:layout_marginTop="50dp"-->
<!--        android:layout_gravity="bottom|center"/>-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTestRemoteConfig"
        android:text="database"
        android:layout_marginTop="50dp"
        android:layout_gravity="bottom|center"/>


</LinearLayout>